     <script>
         // var $ = require('jquery');
         $(document).ready(function() {

             var table =   $('#rod_table').DataTable({
                 "responsive": true,
                 "order": [[ 4, "desc" ]],
                 "columnDefs": [
                     { "orderable": true, "targets": 1 },
                     {"className": "dt-left", "targets": [1]},
                     {"className": "dt-center", "targets": "_all"},
